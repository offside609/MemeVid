# AI Meme Video Agent - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED - API Keys
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
LANGCHAIN_API_KEY=your_langsmith_api_key_here

# =============================================================================
# OPTIONAL - OpenAI Configuration
# =============================================================================
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# OPTIONAL - LangSmith Configuration (for monitoring)
# =============================================================================
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=memevid-agent
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# =============================================================================
# OPTIONAL - FastAPI Configuration
# =============================================================================
DEBUG=True
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# OPTIONAL - Agent Configuration
# =============================================================================
MAX_RETRIES=3
TIMEOUT_SECONDS=30
CONCURRENT_WORKERS=4
NODE_TIMEOUT=60

# =============================================================================
# OPTIONAL - Database Configuration
# =============================================================================
DATABASE_URL=sqlite:///memevid.db
REDIS_URL=redis://localhost:6379/0
DATABASE_ECHO=False

# =============================================================================
# OPTIONAL - Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/memevid.log
LOG_FORMAT=json

# =============================================================================
# OPTIONAL - External APIs
# =============================================================================
EXTERNAL_API_KEY=your_external_api_key_here
EXTERNAL_API_URL=https://api.example.com
EXTERNAL_API_TIMEOUT=30

# =============================================================================
# OPTIONAL - Security
# =============================================================================
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# =============================================================================
# OPTIONAL - Performance
# =============================================================================
WORKER_PROCESSES=4
MAX_CONNECTIONS=100
KEEPALIVE_TIMEOUT=5

# =============================================================================
# OPTIONAL - Monitoring
# =============================================================================
ENABLE_METRICS=True
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
